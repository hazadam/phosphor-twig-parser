{% vue ToDoList %}
    {% props %}
        {% set items = [
            'Fuse Vue and PHP',
            'Encourage SSR'
        ] %}
    {% endprops %}
    <div class="d-flex flex-column align-items-center">
        {% mask %}
            <p>Loading list...</p>
        {% then %}
            <ul class="list-group w-50">
                <li class="list-group-item d-flex justify-content-between" v-for="[id, item] in state.items" :key="id">
                    <span>{ item }</span><button @click="removeItem(id)" class="btn btn-danger">Delete</button>
                </li>
            </ul>
        {% endmask %}
        <input @keydown.enter="addItem" v-model="state.newItem" type="text" class="mt-3 form-control w-50" placeholder="New To Do Item">
        <button @click="addItem" class="w-25 mt-3 btn btn-primary">Add item</button>
    </div>
{% endvue %}
